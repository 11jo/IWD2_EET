IF
	!Allegiance(Myself,ENEMY)
	Allegiance("Iselore",ENEMY)
THEN
	RESPONSE #100
		Enemy()
		Continue()
END

IF
	!Range("Iselore",6)
THEN
	RESPONSE #100
		JumpToObject("Iselore")
		ApplySpellRES("IWJUMPOF",Myself)
		Continue()
END

IF
	HPPercentLT("Iselore",100)
THEN
	RESPONSE #100
		ReallyForceSpell("Iselore",CLERIC_HEAL)
		Wait(1)
END

