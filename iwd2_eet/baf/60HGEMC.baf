IF
	!Global("SET_60HGEMC","LOCALS",1)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		SetGlobalRandom("SSPELLS_1_RANDOM_CAST","LOCALS",1,10)
		SetGlobal("SET_60HGEMC","LOCALS",1)
		SetInterrupt(TRUE)
END
