IF
	Global("ar6051_Kill_HeartlessDead","GLOBAL",1)
THEN
	RESPONSE #100
		Kill(Myself)
END

IF
	Global("DropInventory","LOCALS",1)
THEN
	RESPONSE #100
		DropInventory()
		
		ReallyForceSpell(Myself,WIZARD_FIREBALL)
		
		Kill(Myself)
END

IF
	Global("60Heart1_InContainer","MYAREA",0)
	Global("60Heart1_InParty","MYAREA",0)
	
	//Range("6051HC1",5)
	NearSavedLocation(Myself,"MYAREAHC1SavedLoc",5)
THEN
	RESPONSE #100
		SetGlobal("DropInventory","LOCALS",1)
		//TransferInventory("HC1",Myself)
		PickUpItem("z6heart1")
		DestroyItem("z6heart1")  // Высушенное сердце
		ActionOverride("6051HC1",DestroySelf())
		Wait(4)
END

