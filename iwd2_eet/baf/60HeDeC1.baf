IF
	Global("Marked_Player","LOCALS",0)
	AttackedBy([ANYONE],DEFAULT)
THEN
	RESPONSE #100
		Enemy()
		//EquipWeapon()
		AttackOneRound(LastAttackerOf(Myself))
END

IF
	Global("Marked_Player","LOCALS",0)
	See(LastAttackerOf(Myself))
THEN
	RESPONSE #100
		//EquipWeapon()
		AttackOneRound(LastAttackerOf(Myself))
END

IF
	Global("Marked_Player","LOCALS",0)
	Allegiance(Myself,ENEMY)
	OR(2)
		!AttackedBy([ANYONE],DEFAULT)
		!See(LastAttackerOf(Myself))
THEN
	RESPONSE #100
		ChangeEnemyAlly(Myself,NEUTRAL)
END

