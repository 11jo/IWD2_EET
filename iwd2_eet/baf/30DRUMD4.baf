IF
	!Global("30DRUMD4_INACTIVE","MYAREA",1)
	OpenState(Myself,TRUE)
THEN
	RESPONSE #100
		SetGlobal("DRUM_4_CHECK_SUMMON","MYAREA",0)
		SetGlobal("AR3001_DRUM_SUMMON","GLOBAL",0)
		SetGlobal("30DRUMD4_INACTIVE","MYAREA",1)
END

IF
	!Global("30DRUMD4_INACTIVE","MYAREA",1)
	OpenState(Myself,FALSE)
	Dead("DRUM_4")
THEN
	RESPONSE #100
		SetGlobal("DRUM_4_CHECK_SUMMON","MYAREA",0)
		SetGlobal("AR3001_DRUM_SUMMON","GLOBAL",0)
		OpenDoor(Myself)
END

