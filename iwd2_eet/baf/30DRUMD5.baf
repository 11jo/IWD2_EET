IF
	!Global("30DRUMD5_INACTIVE","MYAREA",1)
	OpenState(Myself,TRUE)
THEN
	RESPONSE #100
		SetGlobal("DRUM_5_CHECK_SUMMON","MYAREA",0)
		SetGlobal("AR3002_DRUM_SUMMON","GLOBAL",0)
		SetGlobal("30DRUMD5_INACTIVE","MYAREA",1)
END

IF
	!Global("30DRUMD5_INACTIVE","MYAREA",1)
	OpenState(Myself,FALSE)
	Dead("DRUM_5")
THEN
	RESPONSE #100
		SetGlobal("DRUM_5_CHECK_SUMMON","MYAREA",0)
		SetGlobal("AR3002_DRUM_SUMMON","GLOBAL",0)
		OpenDoor(Myself)
END

