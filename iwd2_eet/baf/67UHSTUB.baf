IF
	!IsActive(Myself)
	Global("SH_Stop_Envoys","GLOBAL",1)
THEN
	RESPONSE #100
		Activate(Myself)
		SetGlobal("IwIHidden","LOCALS",0)
		ApplySpellRES("idinvis5",Myself)
		Continue()
END

IF
	Global("SH_Stop_Envoys","GLOBAL",1)
	IsActive(Myself)
THEN
	RESPONSE #100
		ChangeAIScript("",SPECIFICS)
END

IF
	!IsActive(Myself)
THEN
	RESPONSE #100
		NoAction()
END

