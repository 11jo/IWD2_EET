IF
	!Global("30DRUMD1_INACTIVE","MYAREA",1)
	OpenState(Myself,TRUE)
THEN
	RESPONSE #100
		SetGlobal("DRUM_1_CHECK_SUMMON","MYAREA",0)
		SetGlobal("AR3000_DRUM_SUMMON","GLOBAL",0)
		SetGlobal("30DRUMD1_INACTIVE","MYAREA",1)
END

IF
	!Global("30DRUMD1_INACTIVE","MYAREA",1)
	OpenState(Myself,FALSE)
	Dead("DRUM_1")
THEN
	RESPONSE #100
		SetGlobal("DRUM_1_CHECK_SUMMON","MYAREA",0)
		SetGlobal("AR3000_DRUM_SUMMON","GLOBAL",0)
		OpenDoor(Myself)
END

